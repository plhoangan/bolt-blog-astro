---
import Layout from './Layout.astro';

interface Props {
  title: string;
  date: string;
  author: string;
  image: string;
}

const { title, date, author, image } = Astro.props;
---

<Layout title={title}>
  <article class="blog-post">
    <img src={image} alt={title} class="hero-image" />
    <div class="content">
      <h1>{title}</h1>
      <div class="metadata">
        <span>By {author}</span>
        <span>â€¢</span>
        <time>{date}</time>
      </div>
      <slot />
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 1rem;
  }

  .metadata {
    display: flex;
    gap: 1rem;
    color: #94a3b8;
    margin-bottom: 2rem;
    font-size: 0.9rem;
  }

  .content {
    color: #e2e8f0;
    line-height: 1.8;
  }

  :global(.content h2) {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
    color: white;
  }

  :global(.content p) {
    margin-bottom: 1.5rem;
  }
</style>
